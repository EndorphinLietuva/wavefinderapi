{
	"tabWidth": 4,
	"useTabs": true,
	"singleQuote": false,
	"trailingComma": "none",
	"bracketSameLine": true,
	"semi": true,
	"bracketSpacing": true,
	"arrowParens": "always",
	"endOfLine": "auto",
	"plugins": ["@prettier/plugin-php"],
	"overrides": [
		{
			"files": ["*.php"],
			"excludeFiles": ["*.blade.php"],
			"options": {
				"parser": "php",
				"phpVersion": "8.2",
				"trailingCommaPHP": false
			}
		}
	]
}
